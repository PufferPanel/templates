{
  "pufferd": {
    "type": "srcds",
    "display": "ARK: Survival Evolved",
    "install": {
      "commands": [
        {
          "files": "https://steamcdn-a.akamaihd.net/client/installer/steamcmd_linux.tar.gz",
          "type": "download"
        },
        {
          "commands": [
            "mkdir steamcmd",
            "tar --no-same-owner -xzvf steamcmd_linux.tar.gz -C steamcmd",
            "steamcmd/steamcmd.sh +login anonymous +force_install_dir ${rootdir} +app_update 376030 +quit",
            "mkdir -p .steam/sdk32",
            "cp steamcmd/linux32/steamclient.so .steam/sdk32/steamclient.so"
          ],
          "type": "command"
        }
      ]
    },
    "run": {
      "stopCode": 2,
      "pre": [],
      "post": [],
      "arguments": [
        "${exclusive}",
        "${mapname}?listen?SessionName=${sessionname}?ServerAdminPassword=${serveradminpassword}?MultiHome=${ip}?Port=${port}?QueryPort=${queryport}?MaxPlayers=${maxplayers}",
        "-server",
        "-log"
      ],
      "program": "./ShooterGame/Binaries/Linux/ShooterGameServer"
    },
    "environment": {
      "type": "tty"
    },
    "data": {
      "sessionname": {
        "value": "My ARK Server",
        "required": true,
        "desc": "Name of server",
        "display": "Session Name",
        "internal": false
      },
      "serveradminpassword": {
        "value": "password",
        "required": true,
        "desc": "Password for server admin",
        "display": "Server Admin Password",
        "internal": false
      },
      "ip": {
        "value": "0.0.0.0",
        "required": true,
        "desc": "What IP to bind the server to",
        "display": "IP",
        "internal": false
      },
      "port": {
        "value": "7777",
        "required": true,
        "desc": "What port to bind the server to",
        "display": "Port",
        "internal": false
      },
      "queryport": {
        "value": "27015",
        "required": true,
        "desc": "What port to listen for queries on",
        "display": "Query Port",
        "internal": false
      },
      "maxplayers": {
        "value": "20",
        "required": true,
        "desc": "Maximum number of players",
        "display": "Max Players",
        "internal": false
      },
      "mapname": {
        "desc": "Name of the map",
        "display": "Map Name",
        "internal": false,
        "required": true,
        "value": "TheIsland"
      },
      "exclusive": {
        "desc": "Set to -exclusivejoin to only permit friends, leave blank for public",
        "display": "Exclusive?",
        "internal": false,
        "required": false,
        "value": ""
      }
    }
  }
}
