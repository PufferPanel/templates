{
  "pufferd": {
    "type": "nodejs",
    "display": "Node JS",
    "run": {
      "stop": "stop",
      "pre": [],
      "post": [],
      "arguments": [
        "--max-old-space-size=${memory}",
        "start.js"
      ],
      "program": "node"
    },
    "environment": {
      "type": "standard"
    },
    "data": {
      "memory": {
        "value": "1024",
        "required": true,
        "desc": "How much memory in MB to allocate to the Node js",
        "display": "Memory (MB)",
        "internal": false
      }
    }
  }
}
